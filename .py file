#  Assignment: Data Analysis with Pandas and Matplotlib

# Task 1: Load and Explore the Dataset
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# To handle errors in loading dataset
try:
    # Using the Iris dataset from seaborn as an example
    df = sns.load_dataset("iris")  
    
    print(" Dataset loaded successfully!\n")
except FileNotFoundError:
    print(" Error: File not found. Please check the path.")
except Exception as e:
    print(f" Error occurred: {e}")

# Display first few rows
print(" First 5 rows of the dataset:")
display(df.head())

# Explore dataset structure
print("\n Dataset Info:")
print(df.info())

print("\n Check for missing values:")
print(df.isnull().sum())

# Clean dataset (drop missing values if any)
df = df.dropna()

# Task 2: Basic Data Analysis
print("\n Descriptive Statistics:")
print(df.describe())

# Grouping by species and calculating mean of numerical columns
grouped = df.groupby("species").mean(numeric_only=True)
print("\n Mean values grouped by species:")
print(grouped)

# Task 3: Data Visualization

# 1. Line Chart (simulated trend: cumulative petal length by index)
plt.figure(figsize=(8,5))
df["petal_length"].cumsum().plot(kind="line", color="blue")
plt.title("Cumulative Petal Length Over Samples")
plt.xlabel("Sample Index")
plt.ylabel("Cumulative Petal Length")
plt.show()

# 2. Bar Chart (average petal length per species)
plt.figure(figsize=(8,5))
sns.barplot(x="species", y="petal_length", data=df, estimator="mean", palette="viridis")
plt.title("Average Petal Length per Species")
plt.xlabel("Species")
plt.ylabel("Average Petal Length")
plt.show()

# 3. Histogram (distribution of sepal length)
plt.figure(figsize=(8,5))
plt.hist(df["sepal_length"], bins=15, color="skyblue", edgecolor="black")
plt.title("Distribution of Sepal Length")
plt.xlabel("Sepal Length (cm)")
plt.ylabel("Frequency")
plt.show()

# 4. Scatter Plot (relationship between sepal length & petal length)
plt.figure(figsize=(8,5))
sns.scatterplot(x="sepal_length", y="petal_length", hue="species", data=df, palette="deep")
plt.title("Sepal Length vs Petal Length")
plt.xlabel("Sepal Length (cm)")
plt.ylabel("Petal Length (cm)")
plt.legend(title="Species")
plt.show()

# Observations
print("\n Observations:")
print("- Setosa species tends to have smaller petal length compared to Versicolor and Virginica.")
print("- The scatter plot shows clear separation of Setosa from other species, useful for classification.")
print("- Sepal length distribution is fairly normal but varies slightly across species.")
print("- Bar chart confirms Virginica has the largest average petal length.")
